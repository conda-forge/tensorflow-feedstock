 )
 
-cc_import(
-    name = "nvrtc_builtins",
-    shared_library = "lib/libnvrtc-builtins.so.%{libnvrtc-builtins_version}",
-)
 %{multiline_comment}
 cc_library(
     name = "nvrtc",
     %{comment}deps = [
         %{comment}":nvrtc_main",
-        %{comment}":nvrtc_builtins",
     %{comment}],
     visibility = ["//visibility:public"],
 )
