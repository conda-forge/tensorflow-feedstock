+++ b/tensorflow/core/kernels/conv_ops_gpu.h
@@ -22,7 +22,7 @@ limitations under the License.
 #include <unordered_map>
 
 #include "absl/strings/str_cat.h"
-#include "absl/strings/str_format.h"
+// #include "absl/strings/str_format.h"
